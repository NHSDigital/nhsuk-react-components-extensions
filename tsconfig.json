{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "es6",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "esnext", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": ["src", "stories"],
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["react", "jest"],
    "declaration": true,
    "declarationDir": "./lib",
    "strict": true,
    "noUnusedParameters": true,
    "esModuleInterop": true
  },
  "awesomeTypescriptLoaderOptions": {
    "ignoreDiagnostics": [7005]
  },
  // needed to add "tests" to "included" to get rid of errors like:
  // Parsing error: /home/spineii-user/.repos/nhsuk-react-components-extensions/src/components/sub-navigation/__tests__/SubNavigation.test.tsx was not found by the project service. Consider either including it in the tsconfig.json or including it in allowDefaultProject
  "include": ["src/**/*" ],
  "exclude": ["node_modules", "**/__tests__", "**/__mocks__"]
}
